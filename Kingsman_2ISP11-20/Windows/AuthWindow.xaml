<Window x:Class="Kingsman_2ISP11_20.Windows.AuthWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Kingsman_2ISP11_20.Windows"
        mc:Ignorable="d"
        Title="AuthWindow"
       Height="600"  Width="400" AllowsTransparency="True" WindowStyle="None"
     
    WindowStartupLocation="CenterScreen" >

    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="#FF796BA3" Offset="0.41"/>
            <GradientStop Color="#FFFFD7D7" Offset="1"/>
            <GradientStop Color="#FF806C6C" Offset="1"/>
            <GradientStop Color="White" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>
    <Border CornerRadius="20"
            BorderThickness="3"
            Background="White" Margin="30,25,30,25">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="25"/>
                    <ColumnDefinition Width="25"/>
                    <ColumnDefinition Width="15"/>
                </Grid.ColumnDefinitions>
            </Grid>
            <Image Source="/Снимок экрана 2023-04-21 121048.png" Stretch="Fill" Opacity="0.185" Margin="-28,0,-33,-23" Grid.RowSpan="2"/>
            <StackPanel VerticalAlignment="Top" Grid.Row="2">
                <TextBlock Text="Авторизация"
                       FontSize="28"
                   FontFamily="Candara Light"
                       HorizontalAlignment="Center"
                       Margin="0 30 0 0"/>
                <TextBlock Text="Введите логин"
                       FontSize="18"
                       HorizontalAlignment="Center"
                               FontFamily="Corbel"
                       Margin="0 100 0 0"/>
                <TextBox x:Name="TbLogin"
                     FontSize="18"
                     Width="200"
                     Height="30"
                     Margin="0 8 0 0 "
                     BorderThickness="0 0 0 2"/>
                <TextBlock Text="Введите пароль"
                       FontSize="18"
                       HorizontalAlignment="Center"
                       Margin=" 0 16 0 0"
                               FontFamily="Corbel"/>
                <PasswordBox x:Name="PbPassword"
                         FontSize="18"
                         Width="200"
                         Height="30"
                         Margin="0 8 0 0"
                             BorderThickness="0 0 0 2"/>
                <Button x:Name="BtnSignIn"
                    Content="Войти"
                    FontSize="18"
                    Width="150"
                    Height="40"
                    Margin="0 100 0 0"
                    Click="BtnSignIn_Click">
                    <Button.Background>
                        <RadialGradientBrush>
                            <GradientStop Color="#FFC2A6BF" Offset="1"/>
                            <GradientStop Color="White" Offset="0.141"/>
                            <GradientStop Color="#FF9E9E9E" Offset="0"/>
                            <GradientStop Color="White" Offset="0"/>
                        </RadialGradientBrush>
                    </Button.Background>
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="7"/>
                        </Style>
                    </Button.Resources>
                </Button>
                <TextBlock Text="Регистрация"
                   VerticalAlignment="Bottom"
                   HorizontalAlignment="Center"
                   FontSize="18"
                   TextDecorations="Underline"
                   Margin="0 10 0 10" 
                               FontFamily="Corbel"
                   MouseLeftButtonDown="TextBlock_MouseLeftButtonDown">
                </TextBlock>
            </StackPanel>
           
        </Grid>
    </Border>
</Window>